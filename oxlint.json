{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["typescript"],
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "eqeqeq": "warn",
    "no-console": "off",
    "no-unused-vars": "warn"
  },
  "ignorePatterns": [
    "node_modules",
    "dist",
    ".nuxt",
    "playground/.nuxt",
    "*.d.ts"
  ]
}
